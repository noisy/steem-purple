ifndef PODIR
	PODIR=
endif

ifndef PRJID
	PRJID=mrim-prpl-underbush
endif

ifndef POPRJ
	POPRJ=${PODIR}${PRJID}
endif

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

all: i18n
clean:
	rm -f *.mo
install:
	$(INSTALL_DATA) -D ${POPRJ}-ru_RU.mo ${DESTDIR}/usr/share/locale/ru/LC_MESSAGES/${PRJID}.mo
	$(INSTALL_DATA) -D ${POPRJ}-ru_RU.mo ${DESTDIR}/usr/share/locale/ru_RU/LC_MESSAGES/${PRJID}.mo
uninstall:
	rm -fv ${DESTDIR}/usr/share/locale/ru/LC_MESSAGES/${PRJID}.mo
	rm -fv ${DESTDIR}/usr/share/locale/ru_RU/LC_MESSAGES/${PRJID}.mo
i18n:
	msgfmt ${POPRJ}-ru_RU.po --output-file=${POPRJ}-ru_RU.mo
check:
